# ===== 認証設定 =====
# ウォレット秘密鍵 (NEVER COMMIT THIS!)
# Solana: hex形式（64文字）、0xプレフィックスなし
STANDX_PRIVATE_KEY=0x...

# ウォレットアドレス
# Solana: Base58形式
STANDX_WALLET_ADDRESS=0x...

# チェーン (bsc or solana)
STANDX_CHAIN=solana

# ===== 取引設定 =====
# 取引ペア（ハイフン区切り形式: BTC-USD, ETH-USD など）
SYMBOL=ETH-USD

# 片側注文サイズ
ORDER_SIZE=0.1

# ===== 距離設定 (bps) =====
# 目標距離 (10bps境界から内側)
TARGET_DISTANCE_BPS=8.0

# 約定回避距離 (この距離まで近づいたら逃げる)
ESCAPE_THRESHOLD_BPS=3.0

# 逃げる先の距離
OUTER_ESCAPE_DISTANCE_BPS=15.0

# 10bps境界への接近しきい値 (再配置トリガー)
REPOSITION_THRESHOLD_BPS=2.0

# 価格変動による再配置しきい値
PRICE_MOVE_THRESHOLD_BPS=5.0

# ===== 接続設定 =====
# WebSocket再接続間隔 (ms)
WS_RECONNECT_INTERVAL=5000

# JWT有効期限 (秒, デフォルト7日)
JWT_EXPIRES_SECONDS=604800

# ===== 動作モード =====
# ドライランモード (True=実注文なし、ログ出力のみ / False=実注文あり)
# 開発・テスト時は必ずTrueにすること
DRY_RUN=True
